        {{ script('sf-ws') }}
        <script>
            $(document).ready(function(){
                $('.showproduct').on('click',function(){
                    const elm = this;
                    const accountID = $(elm).attr("data-accountID");                    
                    if(accountID!==undefined){                       
                        $.ajax({
                            url: "{{ route('products') }}",
                            method: "POST",
                            data: { id : accountID, _csrf: '{{ csrfToken }}' , isAjax:1},
                            dataType: "json",
                            success:function(res){
                                if(res.hasOwnProperty('error') && res.error=='0'){
                                    let listHtml = '<div><a class="text-white" href="javascript:void(0)">Products</a><div>';
                                    if(res.data.products.length){
                                        res.data.products.forEach( p => {
                                            listHtml+='<li>'+p+'</li>';
                                        });
                                    }
                                    listHtml += '</div></div>';
                                    $(elm).parent().html(listHtml)
                                } else {
                                    window.location = '{{ route("login") }}';
                                }
                            }
                        });
                    }
                });
            });
            var ws = null
            var txnListTable = null;
            function startSF () {
                ws = adonis.Ws().connect();

                ws.on('open', () => {
                    subscribeToChannel();
                })

                ws.on('error', () => {
                    console.error('WS connection lost');
                })
            }

            function subscribeToChannel () {
                const sf = ws.subscribe('sf:{{ csrfToken }}');

                sf.on('error', (e) => {
                    console.error(e);
                });

                sf.on('select_account', (message) => {
                    var dataSet = [];
                    var labelsData = [];
                    var sharePriceData = [];
                    var totalShare = message.data.transactions.reduce(function(p,c){
                        var prevVal = Number(p.price);
                        if(p.hasOwnProperty('transaction_code')){
                            if(p.transaction_code !== 'buy'){
                                prevVal = - Math.abs(Number(prevVal));
                            }
                        }
                        var currVal = Number(c.price);
                        if(c.hasOwnProperty('transaction_code')){
                            if(c.transaction_code !== 'buy'){
                                currVal = Math.abs(Number(currVal));
                            }
                        }
                        return {price: (prevVal + currVal)};
                    });
                    message.data.transactions.forEach(function(v){
                        dataSet.push([v.amount,v.transaction_code,v.symbol,v.price,v.total,new Date(v.date)]);
                        labelsData.push(new Date(v.date));
                        let castToatl = v.transaction_code==="sell" ? - Number(v.total).toFixed(2) : Number(v.total).toFixed(2);
                        sharePriceData.push(castToatl);
                    });
                    $('#total-amount').html('<div class="message"><h3>Selected Acc ID: '+message.id+'</h3> <p> Transaction count: '+message.data.transaction_count+' </p> <p>Total share amount: '+totalShare.price+'</p></div>');
                    if(txnListTable!==null){
                        txnListTable.destroy();
                    }
                    txnListTable = $("#txnList").DataTable( {
                        data: dataSet,
                        columns: [
                            { title: "Amount" },
                            { title: "Transaction Code" },
                            { title: "Symbol" },
                            { title: "Price" },
                            { title: "Total" },
                            { title: "Date" }
                        ],
                        "order": [[ 5, "desc" ]]
                    });
                    window.generateChart(labelsData,sharePriceData);
                });
            }

            $(".form-check-input").on('change',function(e){
                if($(this).is(':checked')){
                    window.selectedAccountID = $(this).val();
                    ws.getSubscription('sf:{{ csrfToken }}').emit('select_account', {
                        id: window.selectedAccountID,
                        data:[]
                    })
                }
            });
            startSF();
            
            setInterval(function(){
                if(window.selectedAccountID){
                    $.ajax({
                        url: "{{ route('txn_update') }}",
                        method: "POST",
                        data: { accId : window.selectedAccountID, _csrf: '{{ csrfToken }}' , isAjax:1},
                        dataType: "json",
                        success:function(res){
                            ws.getSubscription('sf:{{ csrfToken }}').emit('select_account', {
                                id: window.selectedAccountID,
                                data:[]
                            })
                        }
                    });
                }               
            }, 10000);
        </script>
    </body>
